<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             x:Class="CalApp.Shared.UI.ScrollableExpanderView"
             x:Name="this">
    <Grid 
        x:Name="ContainerGrid"
        BindingContext="{x:Reference this}">
        <uranium:ExpanderView
            x:Name="ExpanderControl"
            IsExpanded="{Binding IsExpanded}">
            <uranium:ExpanderView.Header>
                <Label
                    x:Name="HeaderLabelControl"
                    Margin="10"
                    FontSize="Medium"
                    Text="{Binding HeaderLabel}"/>
            </uranium:ExpanderView.Header>

            <ScrollView
                x:Name="BodyScrollView"
                HeightRequest="{Binding Source={x:Reference ContainerGrid}, Path=Height}">
                <ContentView
                    x:Name="ContentViewControl"
                    Margin="{Binding Source={x:Reference HeaderLabelControl}, Path=Height}"
                    Content="{Binding BodyContent}"/>
            </ScrollView>
        </uranium:ExpanderView>
    </Grid>
</ContentView>
    

