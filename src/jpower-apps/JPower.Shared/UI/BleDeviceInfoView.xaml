<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
             xmlns:ble="clr-namespace:JPower.Shared.Ble"
             x:Class="JPower.Shared.UI.BleDeviceInfoView"
             x:Name="this">
    <CollectionView
        x:Name="DeviceListView"
        BindingContext="{x:Reference this}"
        Grid.Row="1"
        Grid.Column="1"
        Grid.ColumnSpan="3"
        HorizontalOptions="Center"
        SelectionMode="Single"
        ItemSizingStrategy="MeasureAllItems"
        ItemsSource="{Binding BleDeviceInfo}"
        SelectedItem="{Binding SelectedDevice}">

        <CollectionView.ItemTemplate>
            <DataTemplate
                x:DataType="ble:BleDeviceInfo">
                <Grid
                    x:Name="DeviceGrid"
                    Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
                        Grid.Column="0"
                        Margin="10"
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource 
                                FontFamily="MaterialRegular" 
                                Glyph="{x:Static m:MaterialRegular.Bluetooth}"/>
                        </Image.Source>
                    </Image>

                    <Grid
                        Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Margin="5"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            FontSize="Small"
                            Text="{Binding Name}"/>

                        <Label 
                            Grid.Row="1"
                            Margin="5"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            FontAttributes="Italic"
                            FontSize="Micro"
                            Text="{Binding ID}"/>
                    </Grid>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
