<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JPowerApp.Shared.UI.CalibratePageView"
             Title="Calibrate">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label
            Grid.Row="0"
            x:Name="TitleLabel"
            Margin="20"
            HorizontalOptions="Center" 
            FontSize="Medium"
            Text="Calibrate JPower Device"/>

        <Label
            Grid.Row="1"
            x:Name="StateLabel"
            Margin="20"
            HorizontalOptions="Center" 
            FontSize="Small"
            Text="{Binding DeviceManager.DeviceState}"/>

        <Button
            Grid.Row="2"
            x:Name="DisconnectButton"
            HorizontalOptions="Center"
            Margin="10"
            WidthRequest="100"
            Command="{Binding DisconnectCommand}"
            Text="Disconnect"/>
    </Grid>
</ContentPage>